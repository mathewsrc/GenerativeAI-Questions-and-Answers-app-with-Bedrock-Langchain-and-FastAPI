[
  {
    "name": "${service_name}",
    "image": "078090784717.dkr.ecr.us-east-1.amazonaws.com/${ecr}:${tag}",
    "cpu": 256,
    "memory": 1024,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "bedrock",
        "awslogs-region": "us-east-1",
        "awslogs-create-group": "true",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "essential": true
  }
]
